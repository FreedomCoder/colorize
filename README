test.rb 


html = "<html>
<body>
<dl>
  <dt>the first term</dt>
  <dd>its definition</dd>

  <dt>the second term</dt>
  <dd>its definition</dd>

  <dt>the third term</dt>
  <dd>\"its definition\"</dd>
  <img src=\"test.html\">
</dl>
</body>
</html>"
     
c = Colorize.new( :red => /<.*html>|<.*body>/, 
                  :blue => /".*"/,
                  :cyan => /src/)
puts c.paint(html)

